use File::Find::Rule;

my %file;

$file{README} = qr/XML::XPathScript version (\S+)/;

for my $m ( File::Find::Rule->file->name( '*.pm' )->in( 'lib', 'lib_axkit', 'lib_tomkit' ),
            'script/xpathscript' ) {
   $file{$m} = [ qr/\$VERSION\s*=\s*'(.*?)';/, 
                 qr/This document describes \S+ version (\S*)/ ];
}

%file;
